@model VidllyApp.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("Create", "Customers"))
{
    @Html.ValidationSummary();
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Name)
        @Html.TextBoxFor(c => c.Customer.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Customer.Birthdate)
        @Html.TextBoxFor(c => c.Customer.Birthdate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(c => c.Customer.Birthdate)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(c => c.Customer.IsSubscribedToNewsletter) Subscribed To News letter
        </label>
    </div>

    <div class="form-group">
        @Html.LabelFor(c => c.Customer.MembershipTypeId)
        @Html.DropDownListFor(c => c.Customer.MembershipTypeId,
       new SelectList(Model.MembershipTypes, "Id", "Name"), "", new { @class = "form-control" })
    </div>

    @Html.HiddenFor(c => c.Customer.Id)
    @Html.AntiForgeryToken()
    @section scripts	{
        @Scripts.Render("~/ bundles / jqueryval")
    }
    <button type="submit" class="btn btn-primary"> Save </button>
}

